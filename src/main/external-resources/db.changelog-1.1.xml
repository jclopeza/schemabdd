<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">
	<changeSet id="1" author="jcla">
		<createTable tableName="user">
			<column name="id" type="int">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="login" type="varchar(50)">
				<constraints nullable="false" />
			</column>
			<column name="password" type="varchar(50)">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>
	<changeSet id="2" author="jcla">
		<insert tableName="user">
			<column name="id" valueNumeric="1"/>
			<column name="login" value="jcla"/>
			<column name="password" value="jcla"/>
		</insert>
		<insert tableName="user">
			<column name="id" valueNumeric="2"/>
			<column name="login" value="ahq"/>
			<column name="password" value="ahq"/>
		</insert>
		<insert tableName="user">
			<column name="id" valueNumeric="3"/>
			<column name="login" value="rlo"/>
			<column name="password" value="rlo"/>
		</insert>
		<insert tableName="user">
			<column name="id" valueNumeric="4"/>
			<column name="login" value="aas"/>
			<column name="password" value="aas"/>
		</insert>
	</changeSet>
	<changeSet id="3" author="jcla">
		<createTable tableName="role">
			<column name="id" type="int">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="rol" type="varchar(50)">
				<constraints nullable="false" />
			</column>
			<column name="activo" type="boolean">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>

</databaseChangeLog>
